
  #include <stdio.h>
   int main() {
      int num;
      printf("Enter an integer: ");
      scanf("%d", &num);

    // True if num is perfectly divisible by its own number
    if(num % 2 == 0)
        printf("%d is prime.", num);
    else
        printf("%d is not prime.", num);
    
    return 0;
}              
